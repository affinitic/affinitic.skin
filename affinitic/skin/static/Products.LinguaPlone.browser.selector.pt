<tal:language
    tal:define="available view/available;
                languages view/languages;
                showFlags view/showFlags;">
    <span id="portal-languageselector"
        tal:condition="python:available and len(languages)>=2">
        <tal:test tal:condition="not:showFlags"
                  tal:repeat="lang languages">
            <tal:definition define="code lang/code;
                                    selected lang/selected;
                                    number repeat/lang/number"
                            attributes="class python: selected and 'currentItem' or '';">
                    <a href=""
                       tal:define="flag nothing;
                                   name lang/name"
                       tal:attributes="href lang/url;
                                       title name">
                        <tal:flag condition="flag">
                            <img width="14"
                                 height="11"
                                 alt=""
                                 tal:attributes="src string:${view/portal_url}${flag};
                                                 title python: name;" />
                        </tal:flag>
                        <tal:nonflag condition="not: flag">
                            <span tal:replace="code">language code</span>
                        </tal:nonflag>
                    </a>
                    <span tal:condition="python: number < len(languages)">
                        - 
                    </span>
            </tal:definition>
        </tal:test>

    </span>
</tal:language>
